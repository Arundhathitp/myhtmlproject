pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the web application...'
                sh 'docker build -t my-web-app:latest -f /dockerfile .' // Build Docker image
                // You can add build commands here if necessary
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // You can add test commands here if necessary
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the web application...'
                script {
                    docker.withRegistry('https://hub.docker.com', 'docker-hub-credentials') {
                        def customImage = docker.build('arundhathitp/project:latest', '-f /Dockerfile .')
                        customImage.push()
                    }
                }
            }
        }
    }
}
